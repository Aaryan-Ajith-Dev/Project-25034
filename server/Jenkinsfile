pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        DOCKER_IMAGE = 'a3ryn/recsys'
        IMAGE_TAG = "${BUILD_NUMBER}"

        K8S_NAMESPACE = 'recsys'

        GIT_REPO   = 'https://github.com/Aaryan-Ajith-Dev/Project-25034.git'
        GIT_BRANCH = 'main'

        SERVER_DIR = 'server'
        K8S_DIR    = 'server/k8s'
        TESTS_DIR  = 'server/tests'
        ANSIBLE_DIR = 'server/ansible'
    }

    stages {
        stage('Init Workspace') {
            steps {
                cleanWs()
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO}"
            }
        }

        stage('Load Secrets') {
            steps {
                withCredentials([file(credentialsId: 'env-secrets', variable: 'ENVFILE')]) {
                    sh "export \$(cat $ENVFILE | xargs)"
                }
            }
        }

        stage('Start Kubernetes (Minikube)') {
            steps {
                sh """
                    minikube delete || true
                    minikube start --memory=1500mb --driver=docker || minikube start
                    minikube update-context
                    minikube enable addons ingress
                    minikube enable addons metrics-server
                """
            }
        }

        stage('Build Docker Image') {
            steps {
                dir("${SERVER_DIR}") {
                    sh """
                        docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} .
                        docker tag ${DOCKER_IMAGE}:${IMAGE_TAG} ${DOCKER_IMAGE}:latest
                    """
                }
            }
        }

        stage('Push Image') {
            steps {
                sh """
                    echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin
                    docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    docker push ${DOCKER_IMAGE}:latest
                """
            }
        }

        stage('Prepare Namespace') {
            steps {
                sh "kubectl get ns ${K8S_NAMESPACE} || kubectl create ns ${K8S_NAMESPACE}"
            }
        }

        stage('Deploy ELK') {
            steps {
                dir("${K8S_DIR}") {
                    sh """
                        kubectl apply -f elasticsearch.yaml -n ${K8S_NAMESPACE}
                        kubectl wait --for=condition=ready pod -l app=elasticsearch -n ${K8S_NAMESPACE} --timeout=300s || true

                        kubectl apply -f logstash.yaml -n ${K8S_NAMESPACE}
                        kubectl wait --for=condition=ready pod -l app=logstash -n ${K8S_NAMESPACE} --timeout=180s || true

                        kubectl apply -f kibana.yaml -n ${K8S_NAMESPACE}
                        kubectl apply -f filebeat-configmap.yaml -n ${K8S_NAMESPACE}
                    """
                }
            }
        }

    stage('Deploy Backend') {
        steps {
            dir("${K8S_DIR}") {
                withCredentials([string(credentialsId: 'vault-pass', variable: 'VAULT_PASS')]) {
                    sh '''
                        #!/bin/bash

                        # Apply configmap
                        [ -f configmap.yaml ] && kubectl apply -f configmap.yaml -n ${K8S_NAMESPACE}

                        # Decrypt secrets.yaml
                        if [ -f secrets.yaml ]; then
                            echo "$VAULT_PASS" > /tmp/vault-pass.txt
                            ansible-vault view --vault-password-file /tmp/vault-pass.txt secrets.yaml > /tmp/secrets-plain.yaml
                            kubectl apply -f /tmp/secrets-plain.yaml -n ${K8S_NAMESPACE}
                            rm -f /tmp/vault-pass.txt /tmp/secrets-plain.yaml
                        fi

                        # Update deployment image
                        kubectl set image deployment/recsys-backend recsys-backend=$DOCKER_IMAGE:$IMAGE_TAG -n ${K8S_NAMESPACE} \
                            || kubectl apply -f deployment.yaml -n ${K8S_NAMESPACE}

                        # Apply remaining resources
                        kubectl apply -f service.yaml -n ${K8S_NAMESPACE}
                        kubectl apply -f hpa.yaml     -n ${K8S_NAMESPACE}
                        kubectl apply -f ingress.yaml -n ${K8S_NAMESPACE}

                        # Wait for rollout
                        kubectl rollout status deployment/recsys-backend -n ${K8S_NAMESPACE} --timeout=300s
                    '''
                }
            }
        }
    }
        stage('Tests') {
            steps {
                dir("${TESTS_DIR}") {
                    sh """
                        python3 recsys_elk.py
                    """
                }

                // Integration tests (uncomment when ready)
                sh "python3 -m pytest"
            }
        }
        // stage('Ansible Setup') {
        //     steps {
        //         dir("${ANSIBLE_DIR}") {
        //             sh """
        //                 ansible-playbook -i inventory.ini playbook.yaml
        //             """
        //         }
                    
        //     }
        // }
    }

    post {
        always {
            sh """
                docker rmi ${DOCKER_IMAGE}:${IMAGE_TAG} || true
                docker rmi ${DOCKER_IMAGE}:latest || true
                docker logout || true
            """
        }
    }
}
